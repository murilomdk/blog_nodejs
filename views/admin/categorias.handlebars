<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data da criação: {{date}}</small><br><br>
           <a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-primary mt-4">Editar</button> </a>
           
           <form action="/admin/categorias/delete" method="POST">
               <input type="hidden" name="id" value="{{_id}}">
               <button type="submit" class="btn btn-danger mt-3">Deletar</button>
           </form>

        </div>

    </div>

{{else}}

<h1 class="mt-3">Nenhuma categoria registrada</h1>

{{/each}}