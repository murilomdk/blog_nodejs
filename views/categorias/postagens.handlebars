
<h1>{{categoria.nome}}</h1>

{{#each postagens}}
<div class="card mt-4">

    <div class="card-body">

            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            
            <hr>
            <small>data: {{data}}</small><br>
            <a href="/postagem/{{slug}}"><button class="btn btn-info">Leia mais</button></a>
            <hr>
    </div>
    
</div>

{{else}}
<h5>Nenhum postagem por enquanto!</h5>
{{/each}}